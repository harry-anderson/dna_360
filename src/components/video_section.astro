---
const {title, sub1,sub2, src} = Astro.props;
---
<section>
    <div>
        <h3>{title}</h3>
        <p>{sub1}</p>
        {sub2 ? <p>{sub2}</p> : null}
    </div>
    <iframe 
        width="840" 
        height="430" 
        src="https://www.youtube.com/embed/XR1nn_AmJEU" 
        title="YouTube video player" 
        frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
        allowfullscreen
    ></iframe> 
</section>
<style>
section {
    margin-top: 60px;
    display: grid;
    gap: 24px;
    grid-template-columns: 1fr 2fr;
}
</style>
